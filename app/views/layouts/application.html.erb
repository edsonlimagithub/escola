
﻿<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Sistema Escolar</title>
    <%= stylesheet_link_tag "reset", :media => "screen" %>
    <%= stylesheet_link_tag "text", :media => "screen" %>
    <%= stylesheet_link_tag "grid", :media => "screen" %>
    <%= stylesheet_link_tag "layout", :media => "screen" %>
    <%= stylesheet_link_tag "nav", :media => "screen" %>
    <!--[if IE 6]><link rel="stylesheet" type="text/css" href="css/ie6.css" media="screen" /><![endif]-->
    <!--[if IE 7]><link rel="stylesheet" type="text/css" href="css/ie.css" media="screen" /><![endif]-->
    <%= stylesheet_link_tag "fancy-button/fancy-button" %>
    <%= stylesheet_link_tag "table/demo_page"%>
    <!--Jquery UI CSS-->
    <%= stylesheet_link_tag "themes/base/jquery.ui.all" %>
    
    <!-- BEGIN: load jquery -->
    <%= javascript_include_tag "jquery-1.6.4.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.ui.core.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.ui.widget.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.ui.accordion.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.effects.core.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.effects.slide.min.js" %>
    <%= javascript_include_tag "jquery-ui/jquery.ui.mouse.min.js"%>
    <%= javascript_include_tag "jquery-ui/jquery.ui.sortable.min.js"%>
    <%= javascript_include_tag "table/jquery.dataTables.min.js"%>
    <!-- END: load jquery -->
    <!--Fancy Button-->
    <%= javascript_include_tag "fancy-button/fancy-button.js"%>
    <%= javascript_include_tag "tiny-mce/plugins/table/js/table.js" %>
    <script type="text/javascript">
    </script>
    <style type="text/css">
        #progress-bar
        {
            width: 400px;
        }
    </style>
</head>
<body>
    <div class="container_12">
        <div class="grid_12 header-repeat">
            <div id="branding">
                <div class="floatleft">
                    <%= image_tag("logo.png", :alt => "Logo")%></div>
                <% if user_signed_in? %>
	                <div class="floatright">
	                    <div class="floatleft">
	                        <%= image_tag "img-profile.jpg", :alt => "Usuário" %></div>
	                    <div class="floatleft marginleft10">
	                        <ul class="inline-ul floatleft">
	                            <li><%= current_user.username %></li>
	                            
	  							<li>
	  								<%= link_to('Sair', destroy_user_session_path, :method => :delete) %> 
	  							</li>
	                        </ul>
	                        <br />
	                        <span class="small grey">Last Login: 3 hours ago</span>
	                    </div>
	                </div>
                <% end %>
                <div class="clear">
                </div>
            </div>
        </div>
        <div class="clear">
        </div>
        <div class="grid_12">
            <ul class="nav main">
                <li class="ic-form-style"><a href="javascript:"><span>Alunos</span></a>
                    <ul>
                        <li><a href="/alunos/new">Cadastro</a> </li>
                        <li><a href="/alunos">Listagem</a> </li>
                        <li><a href="form-controls.html">Full Page Example</a> </li>
                        <li><a href="table.html">Page with Sidebar Example</a> </li>
                    </ul>
                </li>
				<li class="ic-typography"><a href="typography.html"><span>Typography</span></a></li>
                <li class="ic-charts"><a href="charts.html"><span>Charts & Graphs</span></a></li>
                <li class="ic-grid-tables"><a href="table.html"><span>Data Table</span></a></li>
                <li class="ic-gallery dd"><a href="javascript:"><span>Image Galleries</span></a>
               		 <ul>
                        <li><a href="image-gallery.html">Pretty Photo</a> </li>
                        <li><a href="gallery-with-filter.html">Gallery with Filter</a> </li>
                    </ul>
                </li>
                <li class="ic-notifications"><a href="notifications.html"><span>Notifications</span></a></li>
            </ul>
        </div>
        <div class="clear">
        </div>
        <h3><%= flash[:error] %></h3>
        <%= yield %>
    <div class="clear">
    </div>
    <div id="site_info">
        <p>
            Copyright <a href="#">BlueWhale Admin</a>. All Rights Reserved.
        </p>
    </div>
</body>
</html>
