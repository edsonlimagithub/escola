<%= render 'menu'%>
<div class='grid_10'>
	<div class="box round">
		<h2>Listing turmas</h2>
		
		<table class="data display datatable">
		<thead>
		  <tr>
		    <th>Descricao</th>
		    <th>Dt inicio</th>
		    <th>Dt fim</th>
		    <th>Limite alunos</th>
		    <th>Ações</th>
		  </tr>
		</thead>
		<tbody>
		<% @turmas.each do |turma| %>
		  <tr>
		    <td><%= turma.descricao %></td>
		    <td><%= turma.dt_inicio.strftime("%d/%m/%Y") %></td>
		    <td><%= turma.dt_fim.strftime("%d/%m/%Y") %></td>
		    <td><%= turma.limite_alunos %></td>
		    <td>
		    	<%= link_to 'Show', turma, :class => "btn btn-blue" %>
		    	<%= link_to 'Edit', edit_turma_path(turma), :class => "btn btn-yellow" %>
		    	<%= link_to 'Destroy', turma, :class => "btn btn-red",method: :delete, data: { confirm: "Apagar registro de #{turma.descricao}?" } %>
		    </td>
		  </tr>
		<% end %>
		</tbody>
		</table>
	</div>
</div>
<script type="text/javascript">
	
		$('.datatable').dataTable();
		setSidebarHeight();
	
	</script>



