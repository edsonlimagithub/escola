								<%= number_to_currency(mensalidade.valor, :unit => "R$", :separator => ",", :delimiter => ".") %>
							</td>
							<td>
								<%= mensalidade.vencimento %>
							</td>
							<td>juros</td>
							<td>multa</td>
							<td>desconto</td>
							<td>total</td>
							<td>dias vencidos</td>
							<td><%= link_baixa mensalidade %></td>
