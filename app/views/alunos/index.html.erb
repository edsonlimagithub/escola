<div class="grid_12">
	<div class="box round first grid">
    <h2>
        Lista de alunos
    </h2>
	</br>
    <%= link_to 'Novo Aluno', new_aluno_path, :class => "btn btn-green" %>
    <div class="block">

		<table class="data display datatable" id='tabela'>
			<thead>
		  <tr>
		    <th>Matricula</th>
		    <th>Nome</th>
		    <th>Nascimento</th>
		    <th>Turma</th>
		    <th>Fone</th>
		    <th>Fone2</th>
		    <th>Ações</th>
		  </tr>
		</thead>
		<tbody>
			<% @alunos.each do |aluno| %>
			  <tr>
			    <td><%= aluno.matricula %></td>
			    <td><%= aluno.nome %></td>
			    <td><%= aluno.data_nascimento ? aluno.data_nascimento.strftime("%d/%m/%Y") : "" %></td>
			    <td><%= aluno.turma ? aluno.turma.descricao : "vazio" %></td>
			    <td><%= aluno.fone %></td>
			    <td><%= aluno.fone2 %></td>
			    <td>
			    	<%= link_to 'Exibir', aluno, :class => "btn btn-blue" %>
			    	<%= link_to 'Alterar', edit_aluno_path(aluno), :class => "btn btn-yellow" %>
			    	<%= link_to 'Apagar', aluno, :class => "btn btn-red ",method: :delete, data: { confirm: "Apagar registro de #{aluno.nome}?" } %>
			    	<%= link_to 'Financeiro', "/financeiro/aluno_mensalidades/#{aluno.id}", :class => "btn btn-orange" %>
			    </td>
			  </tr>
			<% end %>
		</tbody>
		</table>
		
		<br />
		
		
	</div>
	</div>
</div>
<script type="text/javascript">
	
	tabela = $('#tabela').dataTable({
		"sPaginationType": "full_numbers"
	});
	setSidebarHeight();
	
</script>
