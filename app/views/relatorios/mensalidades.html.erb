<%= render 'menu' %>
<div class='grid_10'>
	<div class="box round">
		<h2>Mensalidades Atrasadas</h2>
		<table class="data display datatable" >
		<thead>
		  <tr>
		  	<th>Aluno</th>
		  	<th>Turma</th>
		    <th>Vencimento</th>
		    <th>Quitação</th>
		    <th>Dias de atraso</th>
		  </tr>
		</thead>
		<tbody>
		<% @mensalidades.each do |mensalidade| %>
		  <tr>
		  	<td><%= link_to mensalidade.aluno.nome, "/alunos/#{mensalidade.aluno.id}" %></td>
		  	<td><%= mensalidade.aluno.turma.descricao %></td>
		    <td><%= mensalidade.vencimento.strftime("%d/%m/%Y") %></td>
		    <td><%= mensalidade.data_quitacao ? mensalidade.data_quitacao.strftime("%d/%m/%Y") : '' %></td>
		    <td><%= mensalidade.data_quitacao ? "" : mensalidade.diasAtraso  %></td>
		  </tr>
		<% end %>
		</tbody>
		</table>
	</div>
</div>
<script type="text/javascript">
	
	$('.datatable').dataTable({
		"sPaginationType": "full_numbers"
	});
	setSidebarHeight();
	
</script>
