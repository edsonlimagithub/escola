<%= render 'menu' %>
<div class='grid_10'>
	<div class="box round">
		<h2>Filtrar mensalidades atrasadas</h2>
		<%= form_tag '/relatorio/mensalidades' do %>
		<table>
		  <tr>
		  	<th>Data inicial</th>
		  	<td>
		  		<%= text_field_tag 'data_inicial', '',:size => 10 %>
		  	<td>
		  </tr>
		   <tr>
		  	<th>Data final</th>
		  	<td>
		  		<%= text_field_tag 'data_final', '',:size => 10 %>
		  	<td>
		  </tr>
		  <tr>
		  	<th>Turma</th>
		    <td><%= select_tag 'turma_id', options_from_collection_for_select( @turmas, "id", "descricao"), :prompt => "todas" %></td>
		  </tr>
		  <tr>
		  	<th>Abertas</th><td><%= check_box_tag 'abertas', true, true %></td>
		  </tr>
		   <tr>
		  	<th>Pagas</th><td><%= check_box_tag 'quitadas', true, true %></td>
		  </tr>
		  <tr>
		  	<th></br>Formato de sa√≠da</th>
		  </tr>
		  <tr>
		  	<th>Video</th><td><%= radio_button_tag 'formato', 'video', true %></td>
		  </tr>
		  <tr>
		  	<th>Pdf</th><td><%= radio_button_tag 'formato', 'pdf' %></td>
		  </tr>
		</table>
		<%= submit_tag 'Confirmar'%>
		<% end %>
	</div>
</div>
<script type="text/javascript">
	$(function(){
		$( "#data_inicial" ).add("#data_final").datepicker({
			dateFormat: "dd/mm/yy"
		});
	});

</script>
